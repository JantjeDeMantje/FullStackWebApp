
<% if (error) { %>
  <div class="alert alert-danger"><%= error %></div>
<% } %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Release Year</th>
    </tr>
  </thead>
  <tbody>
    <% movies.forEach(function(movie) { %>
      <tr>
        <td>
          <a href="/movies/<%= movie.film_id %>"><%= movie.title %></a>
        </td>
        <td><%= movie.description %></td>
        <td><%= movie.release_year %></td>
      </tr>
    <% }); %>
  </tbody>
</table>
