<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg">
        <div class="row g-0">
          <div class="col-md-4 ps-4 d-flex align-items-center">
            <img
              src="https://picsum.photos/seed/<%= movie.film_id %>/400/600"
              class="img-fluid rounded-start w-100"
              alt="Movie Poster for <%= movie.title %>"
              style="object-fit: cover; min-height: 300px;"
            />
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h2 class="card-title mb-3"><%= movie.title %></h2>
              <p class="card-text"><strong>Description:</strong> <%= movie.description %></p>
              <div class="row mb-2">
                <div class="col-6">
                  <p class="mb-1"><strong>Release Year:</strong> <%= movie.release_year %></p>
                  <p class="mb-1"><strong>Length:</strong> <%= movie.length %> min</p>
                  <p class="mb-1"><strong>Rating:</strong> <%= movie.rating %></p>
                </div>
                <div class="col-6">
                  <p class="mb-1"><strong>Special Features:</strong> <%= movie.special_features %></p>
                  <p class="mb-1"><strong>Genres:</strong> <%= movie.genres %></p>
                  <p class="mb-1">
                    <strong>Available copies:</strong>
                    <% if (typeof availableCopies !== 'undefined') { %>
                      <% if (availableCopies > 0) { %>
                        <span class="text-success"><%= availableCopies %> available</span>
                      <% } else { %>
                        <span class="text-danger">Not available</span>
                      <% } %>
                    <% } %>
                  </p>
                </div>
              </div>
              <div class="mb-2">
                <strong>Actors:</strong>
                <ul class="mb-0">
                  <% actors.forEach(function(actor) { %>
                    <li><%= actor.first_name %> <%= actor.last_name %></li>
                  <% }); %>
                </ul>
              </div>
              <a href="/" class="btn btn-secondary mt-3">Back to Movies</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>