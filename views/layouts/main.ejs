<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <div class="container-fluid">
    <div class="row flex-nowrap">
      <div
        class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark d-flex flex-column align-items-sm-start px-4 pt-2 text-white min-vh-100 justify-content-start"
      >
        <a
          href="/"
          class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none"
        >
          <span class="fs-5 d-none d-sm-inline ms-4">Menu</span>
        </a>
        <ul
          class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start"
          id="menu"
        >
          <li class="nav-item">
            <a href="#" class="nav-link align-middle px-0">
              <i class="fs-4 bi-house"></i>
              <span class="ms-4 d-none d-sm-inline text-white">Home</span>
            </a>
          </li>
          <li>
            <a href="#" class="nav-link px-0 align-middle">
              <i class="fs-5 bi-people"></i>
              <span class="ms-4 d-none d-sm-inline text-white">About</span>
            </a>
          </li>
        </ul>
        <hr />
      </div>
      <div class="col py-3">
        <!-- Centered Search Bar in main content area -->
        <div class="row justify-content-center mb-4">
          <div class="col-12 col-md-6">
            <form class="d-flex" role="search" method="GET" action="/">
              <input
                class="form-control me-2"
                type="search"
                name="q"
                placeholder="Search"
                aria-label="Search"
                value="<%= typeof q !== 'undefined' ? q : '' %>"
              />
              <button class="btn btn-outline-primary" type="submit">
                Search
              </button>
            </form>
          </div>
        </div>
        <!-- Genre filter buttons -->
        <div class="d-flex flex-wrap justify-content-center mb-3">
          <form method="GET" action="/" class="me-2 mb-2">
            <input type="hidden" name="q" value="<%= typeof q !== 'undefined' ? q : '' %>">
            <button type="submit" class="btn btn-sm <%= !genre ? 'btn-primary' : 'btn-outline-primary' %>" style="padding: 0.23rem 0.45rem; font-size: 0.70rem; border-radius: 0.18rem;">All</button>
          </form>
          <% genres.forEach(function(g) { %>
          <form method="GET" action="/" class="me-2 mb-2">
            <input type="hidden" name="genre" value="<%= g.name %>">
            <input type="hidden" name="q" value="<%= typeof q !== 'undefined' ? q : '' %>">
            <button type="submit" class="btn btn-sm <%= genre === g.name ? 'btn-primary' : 'btn-outline-primary' %>" style="padding: 0.23rem 0.45rem; font-size: 0.70rem; border-radius: 0.18rem;">
              <%= g.name %>
            </button>
          </form>
          <% }); %>
        </div>
        <!-- ...existing search bar code... -->
        <%- body %>
      </div>
    </div>
  </div>
  <!-- Bootstrap JS Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</html>
